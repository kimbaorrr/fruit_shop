@model shoptraicay.Models.SanPham
@using shoptraicay.Models;

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    ShoptraicayEntities shopTraicay = new ShoptraicayEntities();
    LoaiSP loai = shopTraicay.LoaiSP.Find(Model.maLoai);
}

<div class="anhbia-hd">
    <img src="~/Assets/Images/anhchitiethang.jpg" />
</div>

<div class="tongthe_chitiet-all">
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <div class="img-chitiet_sp">
                <img src="@Model.hinhDD" />
            </div>
        </div>
        <div class="col-lg-6 col-md-6">
            <div class="text-chitiet_sp">
                <h3>@Model.tenSP</h3>
                <div class="text-chitiet-giatien">
                    Giá: @String.Format("{0:#,##0 VNĐ}", Model.giaBan)
                </div>
                <p>
                    @Model.ndTomTat    
                </p>
                <div>
                    <div class="input-group-sp">
                        <span class="input-group-btn">
                            <button class="quantity-left-minus btn btn-danger btn-number" data-type="minus" data-field="" style="border-radius:0;">
                                <span class="glyphicon glyphicon-minus"></span>
                            </button>
                        </span>
                        <input type="text" id="quantity" name="quantity" class="form-control input-number" value="1" min="1" max="99" style="border-radius:0;text-align:center;">
                        <span class="input-group-btn">
                            <button class="quantity-right-plus btn btn-success btn-number" data-type="plus" data-field="">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </span>
                        <div class="add_card">
                            <input type="hidden" id="maSP" value="@Model.maSP"/>
                            <button class="btn btn-success" onclick="themChiTiet('@Model.tenSP')">Thêm vào giỏ Hàng</button>
                        </div>
                    </div>
                </div>
                <ul>
                    <li>
                        <b>Trạng thái: </b>
                        <span>Còn hàng</span>
                    </li>
                    <li>
                        <b>Số lượng kho: </b>
                        <span>@Model.soluong @Model.dvt</span>
                    </li>
                    <li>
                        <b>Vận chuyển: </b>
                        <span>1-3 ngày, freeship</span>
                    </li>
                    <li>
                        <b>Loại hàng: </b>
                        <span>@loai.tenLoai</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>